                        <% if (brochureData.location_timing) { %>
                        <div class="location-timing" >
                            <label class="opening-hours-name" style="font-family: 'Montserrat', sans-serif; color: #623229;">Opening Hours:</label>
                            <% brochureData.location_timing.forEach(ct => {%>
                                <p class="day-time">
                                    <span class="day"  style="font-family: 'Montserrat', sans-serif; color: #623229;"><%= ct.day %></span> &nbsp;
                                    <span class="time"  style="font-family: 'Montserrat', sans-serif; color: #623229;"><%= ct.start_time %> - <%= ct.end_time %></span>
                                </p>
                            <%  });%>

                            <% if (brochureData.location.special_hour.length) { %>
                                <label class="opening-hours-name" style="font-family: 'Montserrat', sans-serif; color: #623229;">Special Hours:</label>
